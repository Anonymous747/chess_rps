<?xml version="1.0" encoding="utf-8"?>
<!-- Chess RPS Launch Screen -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient (dark blue-black) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#0A0E27"
                android:centerColor="#141B2D"
                android:endColor="#1E2742" />
        </shape>
    </item>

    <!-- Chess icon matching Flutter loading screen -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/launch_image_384" />
    </item>
</layer-list>
